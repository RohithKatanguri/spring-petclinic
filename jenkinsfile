pipeline{
    //Directives
    agent any
    tools {
        maven 'maven'
    }
    
    
    stages {
        // Specify various stage with in stages

        // stage 1. Build
        stage ('Build maven project'){
            steps {
                sh 'mvn clean install package'
            }
        }
stage('SonarQube analysis') {
steps{
    withSonarQubeEnv(sonarqube-9.9) { // You can override the credential to be used
      sh "mvn sonar:sonar"
}
    }
        // Stage2 : Testing
        stage ('Test'){
            steps {
                echo ' testing......'

            }
        
}
}

}
}
