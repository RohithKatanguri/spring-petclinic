pipeline{
    //Directives
    agent any
    tools {
        maven 'maven'
    }
    
    environment{
   NEXUSIP='65.0.101.0'
   NEXUSPORT='8081'
   registryCredential = 'RohithKatanguri'
   registry='912776142274.dkr.ecr.us-east-1.amazonaws.com/petclinicproject'
   dockerImage = ''
   IMAGE_NAME = 'petclinic'
   SSH_KEY = credentials('ssh-key-id')
   DOCKER_COMPOSE_FILE = 'path-to-docker-compose-file'
   EC2_INSTANCE_IP = '172.31.25.234'
   EC2_INSTANCE_USERNAME = 'ec2-user'
    }
    
    stages {
        // Specify various stage with in stages

        // stage 1. Build
        stage ('Build maven project'){
            steps {
                sh 'mvn clean install package'
            }
        }
 stage('SonarQube analysis') {
            steps{

       echo ' revewing....'
              //   withSonarQubeEnv('sonarqube-9.9'){ 
                    // Optionally use a Maven environment you've configured already
